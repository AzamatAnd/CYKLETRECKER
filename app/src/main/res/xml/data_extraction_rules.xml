<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Правила извлечения данных для Android 14 -->
    <cloud-backup>
        <!-- Включаем резервное копирование в облако для критически важных данных -->
        <include domain="database" path="cycletracker.db"/>
        <include domain="file" path="preferences/cycle_preferences.xml"/>

        <!-- Исключаем чувствительные данные -->
        <exclude domain="file" path="temp/"/>
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="files/sensitive/"/>
    </cloud-backup>

    <!-- Правила для переноса данных между устройствами -->
    <device-transfer>
        <include domain="database" path="cycletracker.db"/>
        <include domain="file" path="preferences/"/>
        <include domain="file" path="files/user_data/"/>

        <!-- Исключаем временные и кэшированные данные -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="tmp/"/>
        <exclude domain="file" path="temp/"/>
    </device-transfer>
</data-extraction-rules>